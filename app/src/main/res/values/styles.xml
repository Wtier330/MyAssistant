<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="InputBoxStyle">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:background">@drawable/border_input_box</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!-- 在 res/values/styles.xml 中定义自定义样式 -->
        <style name="CustomErrorTextStyle" parent="TextAppearance.AppCompat">
            <!-- 设置错误提示的文本颜色 -->
            <item name="android:textColor">@color/greenA0EEE1</item>
            <!-- 设置错误提示的文本大小 -->
            <item name="android:textSize">12sp</item>
            <!-- 设置错误提示的背景颜色 -->
            <item name="android:background">@color/WeChatbg</item>
        </style>

</resources>

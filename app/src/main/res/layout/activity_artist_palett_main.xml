<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/index_rl_contain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.myapplication.view.MyViewPager
            android:id="@+id/index_vp_fragment_list_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true">

        </com.example.myapplication.view.MyViewPager>

        <FrameLayout
            android:id="@+id/index_fl_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#fff">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:orientation="horizontal">
                <!--                android:background="@mipmap/bottom_bar_background"-->

                <!-- 图集 -->

                <LinearLayout
                    android:id="@+id/index_bottom_bar_picList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_index_bottom_bar_picList"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="top|center"
                        android:src="@drawable/picture_off" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginTop="2dp"
                        android:text="@string/index_bottom_bar_picList"
                        android:textColor="#000"
                        android:textSize="10sp" />

                </LinearLayout>
    <!-- 调色板 -->

                <LinearLayout
                    android:id="@+id/index_bottom_bar_palett"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_index_bottom_bar_palett"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="top|center"
                        android:src="@drawable/drawing_borad_off" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginTop="2dp"
                        android:text="@string/index_bottom_bar_palett"
                        android:textColor="#000"
                        android:textSize="10sp" />

                </LinearLayout>
                <!-- 收藏 -->

                <LinearLayout
                    android:id="@+id/index_bottom_bar_collection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_index_bottom_bar_collection"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_gravity="top|center"
                        android:src="@drawable/collectioff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginTop="2dp"
                        android:text="@string/index_bottom_bar_collection"
                        android:textColor="#000"
                        android:textSize="10sp" />
                </LinearLayout>

                <!-- 设置 -->

                <LinearLayout
                    android:id="@+id/index_bottom_bar_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_index_bottom_bar_setting"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="top|center"
                        android:src="@drawable/setting_on" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginTop="2dp"
                        android:text="@string/index_bottom_bar_setting"
                        android:textColor="#000"
                        android:textSize="10sp" />

                </LinearLayout>

            </LinearLayout>


        </FrameLayout>
    </RelativeLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/chatBackground"
    android:backgroundTint="#1987e6"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_artist_contant"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_artistpalett_collection_startTime"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="today"
                android:textColor="#fff" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:gravity="center"

                android:text="至"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_artistpalett_collection_endTime"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:gravity="center"

                android:text="today"
                android:textColor="#fff" />

            <Spinner
                android:id="@+id/sp_artistpalett_collection_timeChoice"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:entries="@array/searchDay"
                android:overlapAnchor="false"
                android:popupBackground="@color/green8CC7B5"
                android:spinnerMode="dropdown" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_artistpalett_collection_search"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="@drawable/et_sharp"
                android:hint="输入 hex、标签 等"
                android:textColorHint="@color/translucent"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_artistpalett_collection_search"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:background="@drawable/search" />


        </LinearLayout>


    </LinearLayout>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:text="N条收藏"
            android:id="@+id/tv_artistpalett_collection_count"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rl_artistpalett_collection_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#fff" />
    </LinearLayout>
</androidx.cardview.widget.CardView>


</LinearLayout>